<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ShoppingAssistant" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.ShoppingAssistant.Link">
        <item name="android:textColor">@color/sys_link</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.ShoppingAssistant.Text">
        <item name="android:textColor">@color/sys_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.ShoppingAssistant.Button">
        <item name="android:textColor">@color/sys_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:colorPrimary">@color/sys_control</item>
        <item name="android:textAppearance">@id/dialog_button</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.ShoppingAssistant.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/sys_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.ShoppingAssistant.ComboBox" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/sys_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.ShoppingAssistant.Dialog">
        <item name="android:textColorPrimary">@color/sys_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.ShoppingAssistant.Price">
        <item name="android:textColorPrimary">@color/forest_green</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/consola</item>
    </style>
</resources>